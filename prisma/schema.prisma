generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}




model Category {
  id Int @id @default(autoincrement()) @map("Category_Id")
  name String @map(name)
  order int @map(order)   

  Menu     Menu[]
  @@map("Category") 
}


model Menus {
  menuId Int @map('userId')
  categoryId        Int  @id @default(autoincrement())    @map("menuId")
  name String
  description String
  image String
  price Int
  status String
  order Int @map("order)

 
  // Users 테이블과 관계를 설정합니다.
  user Users @relation(fields: [userId], references: [userId], onDelete: Cascade)
  category Categories @relation()
  @@map("UserHistories")
}